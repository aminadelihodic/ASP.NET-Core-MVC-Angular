@model rentacar.Models.Automobil

@{
    ViewData["Title"] = "Detaljan pregled automobila";
}
<section class="section-lg bg-default">
    <div class="container">
        <h4 class="title-block">@ViewData["Title"]</h4>

        <style>
            .row dt {
                text-align: right;
                font-weight: bold;
            }

            .row dd {
                text-align: left
            }
        </style>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Naziv)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Naziv)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Opis)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Opis)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IznosZarade)
                </dt>
                <dd class="col-sm-10">
                    @CijenaHelper.Formatiraj(Model.IznosZarade)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Cijena)
                </dt>
                <dd class="col-sm-10">
                    @CijenaHelper.Formatiraj(Model.Cijena)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Kategorija)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Kategorija.Naziv)
                </dd>
            </dl>

            <div class="list list-description d-inline-block d-md-block col-md-6 offset-1">

                <h5 class="text-left" style="margin-top: 20px">Karakteristike automobila</h5>
                <div class="row" style="margin-top: 20px">
                    @for (int i = 0; i < Model.KarakteristikeDetaljaAutomobila.Count; i++)
                    {
                        @if (i % 4 == 0)@Html.Raw("<div class=\"col-xs-12 col-md-6\">");

                        <ul>
                            <li><span class="material-icons-done"></span><span>@Model.KarakteristikeDetaljaAutomobila.ElementAt(i).DetaljiKarakteristika.Naziv </span></li>
                        </ul>

                        if (i % 4 == 3) @Html.Raw("</div>");
                    }

                </div>
            </div>

        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-danger" >Uredi</a>
            <a asp-action="Index" class="btn btn-danger">Nazad</a>
        </div>
        </div>
</section>