@model IEnumerable<rentacar.Models.Automobil>

@{
    ViewData["Title"] = "Automobili";
}

<section class="section-lg bg-default">
    <div class="container">
        <h4 class="title-block">@ViewData["Title"]</h4>
        <div class="row row-sm row-30">

            <p>
                <a asp-action="Create" class="btn btn-primary">Dodaj automobil</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Slike) </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Naziv)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cijena)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IznosZarade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Kategorija)
                        </th>
                        <th>Akcija</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {


<tr>
    <td>
        @if (item.Slike == null)
        {
            <img style="width: 18rem;" class="card-img-top" src="/images/default-car-picture.png" alt="Card image cap">
        }
        else
        {
            <img style="width: 18rem; class="card-img-top" src="/@item.Slike.FirstOrDefault().Url" alt="Card image cap">

        }
    </td>
                            
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Naziv)</a>
                        </td>
                        <td>
                            @CijenaHelper.Formatiraj(item.Cijena)
                        </td>
                        <td>
                            @CijenaHelper.Formatiraj(item.IznosZarade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Kategorija.Naziv)
                        </td>
                        <td width="260">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Uredi</a>&nbsp;<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Obriši</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>