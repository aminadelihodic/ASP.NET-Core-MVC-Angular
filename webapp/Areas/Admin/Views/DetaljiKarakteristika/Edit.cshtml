@model rentacar.Models.DetaljiKarakteristika

@{
    ViewData["Title"] = "Uredi detalje karakteristika automobila";
}

<section class="section-lg bg-default">
    <div class="container">
        <h4 class="title-block">@ViewData["Title"]</h4>
        <div class="row row-sm row-30">

            <div class="row" style="margin: 0 auto;">
                <div class="col-md-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Naziv" class="control-label"></label>
                            <input asp-for="Naziv" class="form-control" />
                            <span asp-validation-for="Naziv" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Spasi" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-primary">Nazad</a>
                        </div>
                    </form>
                </div>
            </div>
            </div>
        </div>
    </section>
            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
