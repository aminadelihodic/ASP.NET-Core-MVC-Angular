@model rentacar.Models.DetaljiKarakteristika

@{
    ViewData["Title"] = "Brisanje detalja karakteristika automobila";
}
<section class="section-lg bg-default">
    <div class="container">
        <h4 class="title-block">@ViewData["Title"]</h4>

        <h3>Da li ste sigurni da želite izbrisati detalj karakteristike automobila?</h3>
        <hr />
        <div>
           <form asp-action="Delete">
             <input type="hidden" asp-for="Id" />
             <input type="submit" value="Obriši" class="btn btn-danger" /> |
             <a asp-action="Index" class="btn btn-primary">Nazad</a>
           </form>
        </div>
    </div>
</section>
